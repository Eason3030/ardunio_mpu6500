#include <IRremote.h>//使用舊版本2.2開頭版本(重要!!)

const int recv_pin = 3;  // IR 接收模組連接到的腳位
IRrecv irrecv(recv_pin);
decode_results results;

long int button1_code = 0x1;  // 假設這是按鈕 "1" 的 IR 代碼

void setup() {
  Serial.begin(9600);  // 初始化序列監視器
  irrecv.enableIRIn(); // 開始接收 IR 信號
}

void loop() {
  if (irrecv.decode(&results)) {
    long int decCode = results.value;  // 讀取 IR 信號的數值
    Serial.print("IR Code: ");
    Serial.println(decCode, HEX);

    // 根據 IR 代碼執行動作
    if (decCode == button1_code) {
      // 按下 "1" 按鈕，執行相應操作
      Serial.println("Button 1 Pressed! Perform action.");
      // 這裡可以放入控制輔助輪升起的代碼
    }
    irrecv.resume();  // 準備接收下一個信號
  }
}
